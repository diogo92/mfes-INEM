class Position

	instance variables
		public xcoord: real;
		public ycoord: real;
	
	operations
		public Position: real * real ==> Position
			Position(x,y) == (
				xcoord := x;
				ycoord := y;
				return self;
			);
		
		public getDistance: real * real ==> real
			getDistance(x,y) == (
				return sqrt(((xcoord - x) * (xcoord - x)) + ((ycoord - y) * (ycoord - y)));
			);

	functions
		sqrt(x: nat) r: real
			post r * r = x and r >= 0

end Position